pipeline {
    agent any
    stages {
        stage("Clean Up"){
            steps {
                deleteDir()
            }
        }
        stage("Clone Repo"){
            steps {
                sh "git clone https://github.com/marygeorge1/sample-restapi.git"
            }
        }
        stage("Build"){
            steps{
                dir("sample-restapi"){
                dir("demoapi"){
                    sh "JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64 mvn -V clean install"
                }
                }
            }
        }
        stage("Test"){
            steps{
                dir("sample-restapi"){
                dir("demoapi"){
                    sh "JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64 mvn test" 
                }
               
               }
            }
        }
    }
}
